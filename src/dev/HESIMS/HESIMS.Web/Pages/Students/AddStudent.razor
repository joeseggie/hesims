@inject HttpClient Http
@inject NavigationManager NavigationManager

<div class="card bg-light mb-4">
    <div class="card-body">
        <form>
            <div class="row">
                <div class="form-group mb-3 col-6">
                    <label>First name</label>
                    <input @bind="student.FirstName" class="form-control" placeholder="First name">
                </div>
                <div class="form-group mb-3 col-6">
                    <label>Last name</label>
                    <input @bind="student.LastName" class="form-control" placeholder="Last name">
                </div>
            </div>
            <div class="row">
                <div class="form-group mb-3 col-6">
                    <label>Other names</label>
                    <input @bind="student.OtherNames" class="form-control" placeholder="Other names">
                </div>
            </div>
            <div class="row">
                <div class="form-group mb-3 col-6">
                    <label>Address</label>
                    <input @bind="student.Address" class="form-control" placeholder="Address">
                </div>
                <div class="form-group mb-3 col-6">
                    <label>NIN</label>
                    <input @bind="student.NIN" class="form-control" placeholder="National Identification Number (NIN)">
                </div>
            </div>
            <button @onclick="Submit" class="btn btn-danger btn-sm" type="submit">Add Student</button>
        </form>
    </div>
</div>

@code {
    [Parameter] public StudentViewModel student { get; set; } = new();

    [Parameter] public EventCallback<StudentViewModel> OnStudentSubmit { get; set; }

    private async Task Submit()
    {
        await OnStudentSubmit.InvokeAsync(student);
    }
}